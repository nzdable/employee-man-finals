<form action="/leave" method="POST">
  <br>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="employeeName">Employee Name</label> <!-- Update label for employeeName -->
      <select class="form-control" id="employeeName" name="employeeName"> <!-- Update name attribute to employeeName -->
        <option value="">Select Employee</option>
        <!-- Loop through customers to populate employee options -->
        <% customers.forEach(customer => { %>
          <option value="<%= customer.firstName %> <%= customer.lastName %>"><%= customer.firstName %> <%= customer.lastName %> - <%= customer.department %></option> <!-- Update option value to employee name -->
        <% }) %>
      </select>
    </div>   

    <div class="col">
      <label for="startDate">Start Leave</label>
      <input type="date" class="form-control" id="startDate" name="startDate" value="">
    </div>

    <div class="col">
      <label for="endDate">End Leave</label>
      <input type="date" class="form-control" id="endDate" name="endDate" value="">
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <br>
      <label for="leaveType">Leave Type</label>
      <select class="form-control" id="leaveType" name="leaveType">
        <option value="">Select Leave Type</option>
        <option value="Vacation">Vacation</option>
        <option value="Sick">Sick</option>
        <option value="Maternity">Maternity</option>
        <option value="Paternity">Paternity</option>
        <!-- Add more options as needed -->
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="leaveStatus">Status</label>
      <select class="form-control" id="leaveStatus" name="leaveStatus">
        <option value="">Select Leave Status</option>
        <option value="Approved">Approved</option>
        <option value="Rejected">Rejected</option>
        <option value="Pending">Pending</option>
        <!-- Add more options as needed -->
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="superiorName">Superior</label>
      <select class="form-control" id="superiorName" name="superiorName">
        <option value="">Add Signatory</option>
        <% managerSuperiors.forEach(manager => { %>
          <option value="<%= manager.firstName %> <%= manager.lastName %>"><%= manager.firstName %> <%= manager.lastName %> - <%= manager.department %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <div class="form-group mb-4">
    <br>
    <button type="submit" class="btn btn-primary">Done</button>
  </div>
</form>